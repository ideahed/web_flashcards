<div class='container'>
  <div class="background">
  <img src="http://i3.minus.com/ibuIQhFc46eAu2.JPG" alt="alt">
  </div>
  <div class="left_tab">
  	<h1>Create a Deck</h1>
    <form action='/create_deck' method="post">
       <input type="text" placeholder="Deck Name" name="deck[name]" required>
       <br>
       <br>
       <input type="text" placeholder="Card Term" name="cards[][term]" required>
       <br>
       <br>
       <textarea  rows="10" cols="30" placeholder="Card Definition" name="cards[][definition]" required></textarea>
       <br>
       <br>
      <div id='add-more-cards'></div>
      <input id='add-another-card' type="button" value="add another card">
      <input type="submit" value="submit">
    </form>

    <div id="partial">
      <%= erb :_add_card, :layout => false %>  
    </div>
  </div> 
</div> 
